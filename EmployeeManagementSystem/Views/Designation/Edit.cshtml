@{
    @model DesignationModel


        <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
     
        
    
        <div class="container" style="min-height: 621px;">
            <h2>Edit</h2>
            <h4 style="color: green;">Edit for Designation section..</h4>
            <hr>
            <div style="margin-left: 130px;">
                <form asp-action="Edit" asp-controller="Designation" method="post">
                    <input asp-for="DesignationID" hidden />
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label"><b>DesignationName</b></label>

                        <div class="col-sm-4">
                            <input asp-for="DesignationName" class="form-control">
                            <span asp-validation-for="DesignationName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label"><b>Description</b></label>

                        <div class="col-sm-4">
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-success" style="margin-left: 252px;">Update</button>
                </form>
            </div>
            <br>
            <br>
            <a asp-controller="Department" asp-action="Index" style="text-decoration: none;">Back to list</a>
            <hr>
            <br>
        </div>
  
 }
