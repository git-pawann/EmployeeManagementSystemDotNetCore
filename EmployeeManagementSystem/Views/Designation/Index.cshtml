@model IEnumerable<EmployeeManagementSystem.Models.DesignationModel>



    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    

    <form method="get" action="Index">


        <div class=" container" style="min-height: 621px;">
            <h3 style="color: green;"><b>Designation Lists:</b></h3>
            <a asp-controller="Designation" asp-action="Create">Create New</a>
            <br />
            <br />
            <div class="container">
                <table class="table table-hover">
                    <thead class="table">
                        <tr>
                            <th>DesignationID</th>
                            <th>DesignationName</th>
                            <th>Description</th>
                            <th>Action(s)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dpmt in Model)
                        {
                            <tr>
                                <td>@dpmt.DesignationID</td>
                                <td>@dpmt.DesignationName</td>
                                <td>@dpmt.Description</td>
                                <td><a class=" btn btn-primary" asp-action="Edit" asp-controller="Designation" asp-route-id="@dpmt.DesignationID">Edit</a></td>
                                <td><a class=" btn btn-danger" asp-action="Delete" asp-controller="Designation" asp-route-id="@dpmt.DesignationID" style="margin-left: -137px;">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <hr />
        </div>
    </form>